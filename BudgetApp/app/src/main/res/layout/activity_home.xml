<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- Top Profile Section -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#8F5CF6"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher_round"
            android:background="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:text="Welcome"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:text="Amir 44B"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@android:color/white"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Budget Overview Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/budgetOverviewCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:layout_marginTop="-60dp"
        app:layout_constraintTop_toBottomOf="@id/profileSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget overview"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/adjustBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjust"
                    android:textColor="#8F5CF6"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:drawableEnd="@android:drawable/ic_menu_edit"
                    android:paddingStart="8dp"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly budget"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />
            <TextView
                android:id="@+id/monthlyBudgetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$6,000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="8dp" />

            <!-- Chart Placeholder -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/budgetPieChart"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/spentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2,335.20 Spent"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-40dp"
                android:background="#FFF"
                android:padding="8dp" />

            <TextView
                android:id="@+id/leftToSpendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left to spend: $3,665.80"
                android:textColor="#8F5CF6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

            <!-- Min/Max Goals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/minGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min: $1,000"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="#E8F5E9"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />
                <TextView
                    android:id="@+id/maxGoalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max: $6,000"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="#FFEBEE"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Donut Chart Placeholder -->
    <ImageView
        android:id="@+id/donutChart"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@android:drawable/ic_menu_compass"
        android:tint="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/profileSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Expenses Section Title -->
    <TextView
        android:id="@+id/expensesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/donutChart"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp" />

    <!-- Expenses List -->
    <LinearLayout
        android:id="@+id/expensesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/expensesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Shopping -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:backgroundTint="#FAFAFA"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:clipChildren="false">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="#FFC107" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shopping"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- $120"
                android:textColor="#FF3B30"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Subscription -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:backgroundTint="#FAFAFA"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:clipChildren="false">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#8F5CF6" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subscription"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- $80"
                android:textColor="#FF3B30"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Food -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/ic_launcher_background"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:backgroundTint="#FAFAFA"
            android:elevation="2dp"
            android:clipToPadding="false"
            android:clipChildren="false">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_compass"
                android:tint="#FF3B30" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- $32"
                android:textColor="#FF3B30"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 